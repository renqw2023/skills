{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "remotion-excalidraw-tts storyboard",
  "type": "object",
  "properties": {
    "fps": {"type": "number"},
    "scenes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "durationSec", "cameraFrom", "cameraTo"],
        "properties": {
          "name": {"type": "string"},
          "durationSec": {"type": "number"},
          "subtitle": {"type": "string"},
          "cameraFrom": {
            "type": "object",
            "required": ["x", "y", "scale"],
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "scale": {"type": "number"}
            }
          },
          "cameraTo": {
            "type": "object",
            "required": ["x", "y", "scale"],
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "scale": {"type": "number"}
            }
          },
          "focus": {
            "type": "object",
            "required": ["x", "y", "width", "height"],
            "properties": {
              "x": {"type": "number"},
              "y": {"type": "number"},
              "width": {"type": "number"},
              "height": {"type": "number"},
              "radius": {"type": "number"},
              "dim": {"type": "number"},
              "label": {"type": "string"}
            }
          }
        }
      }
    }
  },
  "required": ["scenes"]
}
