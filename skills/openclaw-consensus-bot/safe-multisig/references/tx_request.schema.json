{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SafeTxRequest",
  "type": "object",
  "required": ["safe", "transactions"],
  "properties": {
    "safe": { "type": "string", "description": "Safe address (0x...)" },
    "nonce": { "type": "integer", "description": "Optional nonce; if omitted, scripts will fetch current nonce from service" },
    "transactions": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["to", "data", "value"],
        "properties": {
          "to": { "type": "string" },
          "data": { "type": "string", "description": "0x calldata" },
          "value": { "type": "string", "description": "wei as decimal string (e.g. \"0\")" },
          "operation": { "type": "integer", "enum": [0, 1], "default": 0, "description": "0=CALL, 1=DELEGATE_CALL" }
        }
      }
    }
  }
}
