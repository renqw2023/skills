{
  "name": "roku-control",
  "version": "1.0.0",
  "description": "Control Roku devices via local network (ECP protocol). No authentication or cloud services required - works entirely over LAN.",
  "author": "IMaloney1",
  "tags": ["roku", "tv", "streaming", "remote-control", "home-automation", "lan", "ecp"],
  "requirements": {
    "python3": true,
    "packages": ["requests"]
  },
  "capabilities": [
    "Device discovery via SSDP",
    "Remote control (navigation, playback, volume)",
    "App launching (Netflix, YouTube, Hulu, etc.)",
    "Text input for search",
    "Power control (off/on)",
    "Device info and status"
  ],
  "compatibility": {
    "devices": ["Roku TV", "Roku Ultra", "Roku Streaming Stick", "Roku Express", "All Roku devices"],
    "network": "Must be on same LAN as Roku device"
  }
}
