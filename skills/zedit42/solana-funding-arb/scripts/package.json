{
  "name": "solana-funding-arb",
  "version": "2.0.0",
  "description": "Solana DEX funding rate arbitrage - scanner + auto-trader",
  "author": "Clawdbot Community",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "build": "tsc",
    "start": "ts-node --transpile-only src/dashboard/multi-dex-dashboard.ts",
    "scan": "ts-node --transpile-only src/core/multi-dex-aggregator.ts",
    "scan:drift": "ts-node --transpile-only src/core/drift-aggregator.ts",
    "scan:zeta": "ts-node --transpile-only src/core/zeta-aggregator.ts",
    "dashboard": "ts-node --transpile-only src/dashboard/multi-dex-dashboard.ts",
    "backtest": "ts-node --transpile-only backtest-1month.ts",
    "monte-carlo": "ts-node --transpile-only monte-carlo.ts",
    "dev": "npm run dashboard",
    
    "trade": "ts-node --transpile-only src/trading/auto-trader.ts",
    "trade:scan": "ts-node --transpile-only src/trading/auto-trader.ts --scan-only",
    "trade:status": "ts-node --transpile-only src/trading/auto-trader.ts --status",
    "trade:dry": "DRY_RUN=true ts-node --transpile-only src/trading/auto-trader.ts"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0"
  },
  "optionalDependencies": {
    "@solana/web3.js": "^1.73.0",
    "@zetamarkets/sdk": "^1.64.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "solana",
    "defi",
    "funding-rate",
    "arbitrage",
    "drift",
    "flash-trade",
    "perpetuals",
    "auto-trader"
  ]
}
