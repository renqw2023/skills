{
  "version": "1.0.0",
  "hooks": {
    "diagnostic_enhancement": {
      "debug-pro": {
        "enabled": false,
        "trigger_on": ["auto_fix_failed", "complex_stack_trace"],
        "action": "suggest_interactive_debugging",
        "priority": "HIGH",
        "install_command": "openclaw skills install debug-pro"
      },
      "docker-essentials": {
        "enabled": false,
        "trigger_on": ["sandbox_error", "container_timeout"],
        "action": "run_container_diagnostics",
        "priority": "HIGH",
        "install_command": "openclaw skills install docker-essentials"
      },
      "cognitive-memory": {
        "enabled": false,
        "trigger_on": ["recurring_error"],
        "action": "search_error_history",
        "priority": "HIGH",
        "install_command": "openclaw skills install cognitive-memory"
      }
    },
    "recovery_automation": {
      "evolver": {
        "enabled": false,
        "trigger_on": ["fix_applied", "low_success_rate"],
        "action": "track_fix_success_rate",
        "priority": "HIGH",
        "install_command": "openclaw skills install evolver"
      },
      "workflow-builder": {
        "enabled": false,
        "trigger_on": ["multi_step_fix_needed"],
        "action": "suggest_workflow_creation",
        "priority": "HIGH",
        "install_command": "openclaw skills install workflow-builder"
      },
      "multi-agent": {
        "enabled": false,
        "trigger_on": ["multi_channel_error"],
        "action": "coordinate_parallel_diagnostics",
        "priority": "HIGH",
        "install_command": "openclaw skills install multi-agent"
      }
    },
    "notifications": {
      "github": {
        "enabled": false,
        "trigger_on": ["unresolved_error", "new_error_pattern"],
        "action": "create_github_issue",
        "priority": "HIGH",
        "install_command": "openclaw skills install github"
      },
      "slack-integration": {
        "enabled": false,
        "trigger_on": ["critical_error", "team_environment"],
        "action": "send_slack_alert",
        "priority": "HIGH",
        "install_command": "openclaw skills install slack-integration"
      },
      "discord-bot": {
        "enabled": false,
        "trigger_on": ["community_help_needed"],
        "action": "post_to_discord",
        "priority": "MEDIUM",
        "install_command": "openclaw skills install discord-bot"
      }
    }
  }
}
