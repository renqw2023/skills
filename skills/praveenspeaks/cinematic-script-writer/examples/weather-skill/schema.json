{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "apiKey": {
      "type": "string",
      "description": "OpenWeatherMap API key"
    },
    "defaultLocation": {
      "type": "string",
      "description": "Default location for weather queries",
      "default": "London"
    },
    "units": {
      "type": "string",
      "enum": ["metric", "imperial", "kelvin"],
      "default": "metric"
    }
  },
  "required": ["apiKey"]
}
