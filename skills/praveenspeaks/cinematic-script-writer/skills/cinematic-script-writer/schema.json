{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "llmProvider": {
      "type": "string",
      "enum": ["openai", "anthropic", "local"],
      "default": "anthropic",
      "description": "LLM provider for generating scripts"
    },
    "apiKey": {
      "type": "string",
      "description": "API key for LLM provider"
    },
    "model": {
      "type": "string",
      "description": "Model name (e.g., claude-3-opus, gpt-4)",
      "default": "claude-3-opus"
    },
    "defaultVideoDuration": {
      "type": "number",
      "description": "Default video duration in seconds",
      "default": 60
    },
    "cameraStyle": {
      "type": "string",
      "enum": ["cinematic", "documentary", "anime", "comic-book", "minimalist"],
      "default": "cinematic",
      "description": "Default visual style for camera work"
    }
  },
  "required": []
}
